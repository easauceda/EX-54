if event.type == KEYDOWN:
                if event.key == K_SPACE:
                    if ammo > 0:
                        if weapon_type == 'missile':
                            missile_ammo = ammo
                            pygame.mixer.Sound.play(constants.laser)
                        else:
                            bomb_ammo = ammo
                        boom = Weapon(main_ship.get_x(), main_ship.get_y(), weapon_img, weapon_type)
                        ammo -= 1
                        active_munitions.append(boom)
                if event.key == K_1 or event.key == K_KP1:
                    weapon_img = missile_img
                    weapon_type = 'missile'
                    ammo = missile_ammo
                if event.key == K_2 or event.key == K_KP2:
                    weapon_img = bomb_img
                    weapon_type = 'bomb'
                    ammo = bomb_ammo

for weapon in active_munitions:
            weapon.fall()
            weapon.draw(surface, explosion_img, constants.impact)
            if weapon.exploded:
                active_munitions.pop(weapon_cnt)
            weapon_cnt += 1